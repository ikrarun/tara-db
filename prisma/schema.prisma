generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quotes {
  id     BigInt  @id @default(autoincrement())
  quote  String  @unique
  author String? @default("")
}

model Suggestedreadings {
  id         BigInt   @id @unique @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  title      String   @default("")
  desc       String
  link       String
  featured   Boolean
  imageUrl   String
}

model Myths {
  id         BigInt    @id @unique @default(autoincrement())
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  title      String    @unique
  shrotsec   String
  date       DateTime? @default(dbgenerated("(now() AT TIME ZONE 'utc-5:30'::text)")) @db.Timestamptz(6)
  Posts      Posts?
}

model Posts {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(dbgenerated("(now() AT TIME ZONE 'utc-5:30'::text)")) @db.Timestamptz(6)
  postid     BigInt?  @unique
  wysiwyg    String
  Myths      Myths?   @relation(fields: [postid], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  ADMIN
}
