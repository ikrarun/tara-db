generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quotes {
  id     BigInt  @id @default(autoincrement())
  quote  String  @unique
  author String? @default("")
}

model Suggestedreadings {
  id         BigInt   @id @unique @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  title      String   @default("")
  desc       String
  link       String
  featured   Boolean
  imageUrl   String
}

model Myths {
  id         BigInt    @id @unique @default(autoincrement())
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  title      String    @unique
  shrotsec   String
  date       DateTime? @default(dbgenerated("(now() AT TIME ZONE 'utc-5:30'::text)")) @db.Timestamptz(6)
  Posts      Posts?
}

model Posts {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(dbgenerated("(now() AT TIME ZONE 'utc-5:30'::text)")) @db.Timestamptz(6)
  postid     BigInt?  @unique
  wysiwyg    String
  Myths      Myths?   @relation(fields: [postid], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
